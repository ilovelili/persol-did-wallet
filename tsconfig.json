{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "importHelpers": true,
    "lib": ["es2017"],
    "jsx": "react-native",
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "Persol/*": ["./*"],
      "persol-graph": ["./lib/persol-graph"]
    }
  },
  "types": ["jest"],
  "include": ["./src/**/*", "@types"],
  "exclude": ["node_modules"]
}
